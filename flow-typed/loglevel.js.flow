// @flow

type LogLevelName = 'trace' | 'debug' | 'info' | 'warn' | 'error';
type LogLevelNumber = 0 | 1 | 2 | 3 | 4 | 5;
type LogLevelParam = LogLevelName | LogLevelNumber;

declare module 'loglevel' {
  declare class Logger {
    levels: {
      TRACE: 0;
      DEBUG: 1;
      INFO: 2;
      WARN: 3;
      ERROR: 4;
      SILENT: 5;
    };

    trace(msg: any): void;
    debug(msg: any): void;
    info(msg: any): void;
    warn(msg: any): void;
    error(msg: any): void;

    setLevel(level: LogLevelParam, persist?: boolean): void;
    setDefaultLevel(level: LogLevelParam): void;
    enableAll(): void;
    disableAll(): void;
    getLevel(): LogLevelNumber;
  }

  declare class RootLogger extends Logger {
    getLogger(loggerName: string): Logger;
    noConflict(): void;
  }

  declare module.exports: RootLogger;
}
